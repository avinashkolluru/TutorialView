<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ak.android.tutorialview.BackgroundViewAnchorHighlighter
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tutorial_frame_background_view_highlighter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Whatever"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutorial_frame_content_text"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/tutorial_view_content_color"
        android:background="@color/tutorial_view_content_background"
        android:padding="8dp"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"/>


</RelativeLayout>