<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ak.android.tutorialview.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ak.android.tutorialview.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SampleTutorialActivity"
            android:label="@string/title_sample_tutorial_activity" >
        </activity>
        <activity
            android:name="com.ak.android.tutorialview.app.SingleShotTutorialActivity"
            android:label="@string/title_activity_single_shot_tutorial" >
        </activity>
    </application>

</manifest>
